@using WebbanBALO.Areas.Admin.Models.Framework
@model Sanpham
@{
    ViewBag.Title = "Chitietsp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Chi tiết sản phẩm - VCA</title>
<div class="content">
    <div class="container">
        <div class="single">
          
                <div class="col-md-12 top-in-single">
                    <div class="col-md-5 single-top">
                        <img src="~/Areas/Admin/FilesUpload/@Model.Anh" class="img-responsive" alt="">
                    </div>
                    <div class="col-md-7 single-top-in">
                        <div class="single-para">
                            <h4>@Model.Tensp</h4>
                            <p style="margin-top:20px;">@Model.Mota</p>


                            <label class="add-to" style="margin-top:20px;">Giá: @Model.Gia</label>

                            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @aMasp = Model.Masp, @strURL = Request.Url.ToString() }))
                            {
                                <input type="submit" value="Thêm Giỏ Hàng" class="cart" style=" float: left;margin-top: 50px; height: 50px; width: 150px;background-color: #615c85;color: white;"/>
                                
                                   
                            }


                        </div>
                    </div>
                    <div class="clearfix"> </div>

                </div>
            <div class="clearfix"> </div>
        </div>


    </div>
</div>
